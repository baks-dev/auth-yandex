{% trans_default_domain 'auth-yandex.admin' %}

<div class="modal-dialog modal-dialog-centered" style="max-width: 800px;">

    {{ form_start(form) }}

    <div class="modal-content p-3 border-bottom border-5 border-primary">

        <div class="modal-header">
            <h5 class="modal-title">
                {{ 'page.edit'|trans }}
            </h5>
        </div>

        <div class="modal-body">

            <div class="d-flex justify-content-around pb-3 radio-buttons clearfix w-50" data-buttons="true"
                    {#                 style='clear: both' #}
            >
                <label class="btn p-3 border-dotted rounded-3 w-100 {{ form.active.vars.data ? 'active' }}">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <span class="h5">
                                <div class="form-check d-flex align-items-center">
                                    {{ form_widget(form.active.value, {label: false}) }}
                                    <div class="h6 mb-0">
                                        Аккаунт активен
                                    </div>
                                </div>
                            </span>

                        </div>
                    </div>
                </label>
            </div>

            {#            <div class="w-50"> #}
            {#                {{ form_row(form.active, {label: 'Статус аккаутна'}) }} #}
            {#            </div> #}
        </div>

        <div class="modal-footer ">
            <div class="mt-3 gap-3 d-flex">
                {# Отмена #}
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">
                    {{ 'btn.cancel'|trans({}, 'core.btn') }}
                </button>

                {# Сохранить #}
                {{ form_widget(form.account_yandex_edit, { label: '
                    <span>'~ 'btn.edit'|trans({}, 'core.btn') ~'</span>
                    <span class="spinner-border spinner-border-sm vertical-middle d-none"></span>
			    '}) }}
            </div>
        </div>

    </div>

    {{ form_end(form) }}
</div>

